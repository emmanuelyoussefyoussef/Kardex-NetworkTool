<Window x:Class="Network_Window.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Network_Window"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="1200">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="240"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition/>
            <RowDefinition Height="100"/>
        </Grid.RowDefinitions>

        <!--Menü tasten -->
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="auto"/>
            </Grid.ColumnDefinitions>
            <Menu Grid.Column="0" Background="Transparent">
                <MenuItem Header="Hilfe" FontSize="16" Click="MenuItem_Click" Height="30" Background="LightGray"/>
            </Menu>
            <Menu Grid.Column="1" Background="Transparent">
                <MenuItem Header="Netzwerk" FontSize="16" Click="Netzwerk_Button" Height="30" Background="LightGray"/>
            </Menu>
        </Grid>

        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition Width="auto"/>
            </Grid.ColumnDefinitions>
            
            
            
            <TextBlock Name="Route_1" Grid.Row="0" Grid.Column="0" Text="" FontSize="15" Width="auto" HorizontalAlignment="Center" TextWrapping="Wrap"/>
            <Button Name="Route_1_Delete" Grid.Row="0" Grid.Column="1" Content="Löschen"  HorizontalAlignment="Right" Background="OrangeRed"/>

            <TextBlock Name="Route_2" Grid.Row="1" Grid.Column="0" Text="" FontSize="15" Width="auto" HorizontalAlignment="Center" TextWrapping="Wrap"/>
            <Button Name="Route_2_Delete" Grid.Row="1" Grid.Column="1" Content="Löschen" HorizontalAlignment="Right" Background="OrangeRed"/>

            <TextBlock Name="Route_3" Grid.Row="2" Grid.Column="0" Text="" FontSize="15" Width="auto" HorizontalAlignment="Center" TextWrapping="Wrap"/>
            <Button Name="Route_3_Delete" Grid.Row="2" Grid.Column="1" Content="Löschen" HorizontalAlignment="Right" Background="OrangeRed"/>

            <TextBlock Name="Route_4" Grid.Row="3" Grid.Column="0" Text="" FontSize="15" Width="auto" HorizontalAlignment="Center" TextWrapping="Wrap"/>
            <Button Name="Route_4_Delete" Grid.Row="3" Grid.Column="1" Content="Löschen" HorizontalAlignment="Right" Background="OrangeRed"/>
        </Grid>

        <Image Grid.Row="1" 
           Grid.Column="1" 
           Source="/Images/laptop.png"
           VerticalAlignment="Top"
           HorizontalAlignment="Left" 
           Height="98" 
           Width="106" 
           Margin="347,164,0,0"
           />
        <Grid Grid.Row="2">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <!--Das ist für die IP Adresse-->
            <TextBox Name="IP_Adresse_Block" 
                     Grid.Row="0" Grid.Column="1" 
                     Width="auto" Padding="0" VerticalContentAlignment="Center" HorizontalContentAlignment="Left" Margin="0,0,-158,0"
                     FontSize="15" FontWeight="Bold" FontFamily="Courier New"/>

            <TextBlock Name="IP_Adresse_Block_Beschreibung" 
                       Grid.Row="0" Padding="0" FontWeight="Bold" VerticalAlignment="Center"
                       Background="Transparent" 
                       FontFamily="Courier New" Text="Ipv4"/>

            <!--Das ist für die Maske-->
            <TextBox Name="Mask_Block" 
                     Grid.Row="1" Grid.Column="1" 
                     Width="Auto" Padding="0" VerticalContentAlignment="Center" HorizontalContentAlignment="Left" Margin="0,0,-158,0"
                     FontSize="15" FontWeight="Bold" FontFamily="Courier New" />

            <TextBlock Name="Mask_Block_Beschreibung" 
                       Grid.Row="1" Padding="0" FontWeight="Bold" VerticalAlignment="Center" HorizontalAlignment="Stretch"
                       Background="Transparent" 
                       FontFamily="Courier New" Text="Maske"/>
            <!--Das ist für die Gateway-->
            <TextBox Name="Gate_Block" 
                     Grid.Row="2" Grid.Column="1" 
                     Width="auto" Padding="0" VerticalContentAlignment="Center" HorizontalContentAlignment="Left" Margin="0,0,-158,0"
                     FontSize="15" FontWeight="Bold" FontFamily="Courier New"/>

            <TextBlock Name="Gate_Block_Beschreibung" 
                       Grid.Row="2" Padding="0" FontWeight="Bold" VerticalAlignment="Center" HorizontalAlignment="Stretch"
                       Background="Transparent" 
                       FontFamily="Courier New" Text="Gate"/>

            <!--Das ist für die Gateway-->
            <TextBox Name="Index_Block" 
                     Grid.Row="3" Grid.Column="1" 
                     Width="auto" Padding="0" VerticalContentAlignment="Center" HorizontalContentAlignment="Left" Margin="0,0,-158,0"
                     FontSize="15" FontWeight="Bold" FontFamily="Courier New"/>

            <TextBlock Name="Index_Block_Beschreibung" 
                       Grid.Row="3" Padding="0" FontWeight="Bold" VerticalAlignment="Center" HorizontalAlignment="Stretch"
                       Background="Transparent" 
                       FontFamily="Courier New" Text="Index"/>

            <Button Name="Eingabe_Button" 
                    Grid.Column="2" Grid.Row="3" 
                    HorizontalAlignment="Left" Margin="158,0,0,0"  VerticalAlignment="Center" Height="25" Width="46" 
                    FontSize="9"
                    Content="Route add"
                    Click="Eingabe_Button_Click"/>


        </Grid>


    </Grid>
</Window>
